# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Backend (Admin SDK) Configuration
FIREBASE_CREDENTIALS_PATH=path/to/your/firebase-service-account.json

# Firebase Frontend (Web SDK) Configuration
# Get these from Firebase Console > Project Settings > General > Your apps > Web app
FIREBASE_API_KEY=your_web_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abc123def456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
